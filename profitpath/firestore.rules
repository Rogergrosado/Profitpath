rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public Products Collection: Anyone can read, but only admins can write
    match /products/{productId} {
      allow read: if true;  // Publicly readable by anyone
      allow write: if request.auth != null && request.auth.token.admin == true; // Only admins can write
    }

    // User-Specific Documents: Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

